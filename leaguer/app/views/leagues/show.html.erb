  <div class="span5 stat_box fixed_size_div_bigger" style="float:right;">
    <h3> Matches </h3>
    <% if !@matches.empty? %>
      <table class="teams_users">
        <tr>
          <th> Match </th>
          <th> Challenge </th>
        </tr>
        <% @matches.each do |match| %>
        <tr>
          <td><%= link_to "Match##{match.id}", match %></td>
          <td><%= link_to "#{match.team_1.name}", team_path(match.team_1) %> vs <%= link_to "#{match.team_2.name}", team_path(match.team_2)   %></td>
        </tr>
        <% end %>
      </table>
      <div class="pagination-wrapper">
        <%= will_paginate @matches, param_name: 'match_page'%>
      </div>      
    <% else %>
      <p class="description"> No matches were played on this league yet! </p>
    <% end %>
  
  </div>
</div>

</div>