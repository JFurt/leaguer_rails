<% provide(:title,'League') %>
<h1>League</h1>
<div class="row">

  <div class="span5 stat_box fixed_size_div_bigger">
    <h3> Teams </h3>
    <table class="teams teams_users">
      <tr>
        <th> Team </th>
        <th> Points </th>
      </tr>
      <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, team %></td>
        <td><%= team.points %></td>
      </tr>
      <% end %>
    </table>
    <div class="pagination-wrapper">
      <%= will_paginate @teams, param_name: 'team_page'%>
    </div>    
  </div>
