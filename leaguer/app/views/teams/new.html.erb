<% provide(:title, "Create Team") %>
<h1> Create a Team </h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@team) do |f| %>
			<%= render partial: 'shared/error_messages', locals: {var: @team} %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.submit "Create my Team", class: "btn btn-large btn-primary"  %>
		<% end %>
	</div>
</div>